<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".Fragments.LandingFragment">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:contentDescription="@null"
            android:src="@drawable/app_src_main_res_drawable_agora"
            android:layout_marginTop="100dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:id="@+id/textHolder"
            app:layout_constraintTop_toBottomOf="@+id/imageView2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AGORA"
                android:textColor="@color/AppGreen"
                android:fontFamily="@font/poppins_bold"
                android:textSize="24sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VOTE"
                android:layout_marginStart="10dp"
                android:textColor="@color/AppYellow"
                android:fontFamily="@font/poppins_bold"
                android:textSize="24sp"
                android:layout_marginLeft="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="center_horizontal"
            android:background="@drawable/landing_holder">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Welcome to the era of Elections"
                android:textColor="@color/AppWhite"
                android:layout_marginTop="60dp"
                android:textSize="21sp"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="center"/>

            <Button
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:background="@drawable/landing_background"
                android:text="LOG IN"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="18sp"
                android:id="@+id/login"
                android:textColor="@color/AppGreen"/>

            <Button
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:background="@drawable/landing_background"
                android:text="SIGN UP"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="18sp"
                android:id="@+id/signUp"
                android:textColor="@color/AppGreen"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>